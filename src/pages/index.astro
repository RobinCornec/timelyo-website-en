---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout 
  title="Timelyo - Time Clock Solution for Nomadic Teams"
  description="Timelyo is a modern time clock solution for nomadic teams, featuring QR code badges, mobile apps, and seamless integration capabilities. Perfect for managing remote workforce attendance."
>
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-blue-600 to-cyan-500"></div>
      <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
      <div class="container relative mx-auto px-4 py-32">
        <div class="max-w-4xl mx-auto text-center" data-aos="fade-up">
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <img src="/timelyo-logo.svg" alt="Timelyo Logo" class="max-w-85"/>
          </div>
          <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white leading-tight">
            Time Tracking for the <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-200 to-cyan-400">Modern Workforce</span>
          </h1>
          <p class="text-xl md:text-2xl mb-12 text-blue-100">Streamline attendance tracking for your remote teams with smart QR badges and mobile apps</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contact" class="bg-white text-blue-600 px-8 py-4 rounded-full font-semibold hover:bg-blue-50 transition-all transform hover:scale-105 shadow-lg">
              Get Started
            </a>
            <a href="#features" class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold hover:bg-white/10 transition-all">
              Learn More
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-32 bg-white" id="features">
      <div class="container mx-auto px-4">
        <div class="text-center mb-20" data-aos="fade-up">
          <h2 class="text-4xl font-bold mb-4">Key Features</h2>
          <div class="w-24 h-1 bg-blue-600 mx-auto"></div>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="group p-8 rounded-2xl bg-slate-50 hover:bg-white hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
            <div class="w-16 h-16 bg-blue-600 rounded-xl mb-6 flex items-center justify-center text-white group-hover:scale-110 transition-transform">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">QR Code Badges</h3>
            <p class="text-slate-600">Print professional ID-1 format badges with unique QR codes for easy and secure time tracking.</p>
          </div>
          <div class="group p-8 rounded-2xl bg-slate-50 hover:bg-white hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
            <div class="w-16 h-16 bg-blue-600 rounded-xl mb-6 flex items-center justify-center text-white group-hover:scale-110 transition-transform">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">Mobile Apps</h3>
            <p class="text-slate-600">Track time on the go with our user-friendly mobile apps available for both Android and iOS.</p>
          </div>
          <div class="group p-8 rounded-2xl bg-slate-50 hover:bg-white hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="300">
            <div class="w-16 h-16 bg-blue-600 rounded-xl mb-6 flex items-center justify-center text-white group-hover:scale-110 transition-transform">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">Data Export</h3>
            <p class="text-slate-600">Export timesheets to CSV format for easy integration with your existing systems.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Integration Section -->
    <section class="py-32 bg-gradient-to-br from-slate-900 to-blue-900 text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center" data-aos="fade-up">
          <h2 class="text-4xl font-bold mb-8">Future Integrations</h2>
          <div class="w-24 h-1 bg-blue-400 mx-auto mb-8"></div>
          <p class="text-xl text-blue-100">
            Coming soon: Seamless integration with IAM and SIRH tools to automate employee management tasks and streamline your workflow.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-32 bg-white" id="contact">
      <div class="container mx-auto px-4">
        <div class="text-center mb-20" data-aos="fade-up">
          <h2 class="text-4xl font-bold mb-4">Contact Us</h2>
          <div class="w-24 h-1 bg-blue-600 mx-auto"></div>
        </div>
        <ContactForm />
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="bg-slate-900 text-white py-8">
    <div class="container mx-auto px-4 text-center">
      <p>&copy; {new Date().getFullYear()} Timelyo. All rights reserved.</p>
    </div>
  </footer>
</Layout>